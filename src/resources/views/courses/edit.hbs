<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" value="{{course.name}}" class="form-control" name="name" id="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <textarea class="form-control" name="description" id="" cols="" rows="">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input type="text" value="{{course.videoId}}" class="form-control" name="videoId" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" value="{{course.level}}" class="form-control" name="level" id="level">
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>

</div>